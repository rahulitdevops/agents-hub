# ─── OpenClaw Platform Environment Variables ─────────────────────────────────

# Authentication mode: "claude_subscription" or "api_key"
OPENCLAW_AUTH_MODE=claude_subscription

# Claude Subscription (recommended — use your existing Claude Pro/Team plan)
# Get your session key from claude.ai → DevTools → Application → Cookies → sessionKey
CLAUDE_SESSION_KEY=

# LLM Provider API Keys (only needed if OPENCLAW_AUTH_MODE=api_key)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# OpenClaw Gateway
# For Docker: use ws://gateway:18789 (container networking)
# For local dev: use ws://127.0.0.1:18789
OPENCLAW_GATEWAY_URL=ws://gateway:18789
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_GATEWAY_TOKEN=
OPENCLAW_GATEWAY_PASSWORD=

# Database (SQLite by default, or provide a PostgreSQL URL)
DATABASE_URL=file:./data/openclaw.db
# DATABASE_URL=postgresql://user:pass@localhost:5432/openclaw

# Server
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# Optional: Channel integrations
WHATSAPP_SESSION_PATH=./data/whatsapp-session
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=

# ─── Slack Multi-Bot Configuration ──────────────────────────────────────────
# Each agent bot has its own token and signing secret.
# Get Bot Token from: api.slack.com/apps → OAuth & Permissions → Bot User OAuth Token
# Get Signing Secret from: api.slack.com/apps → Basic Information → App Credentials
# Get App ID from: api.slack.com/apps → Basic Information → App ID

# Groot (Director)
SLACK_GROOT_BOT_TOKEN=
SLACK_GROOT_SIGNING_SECRET=
SLACK_GROOT_APP_ID=

# Forge (Backend)
SLACK_FORGE_BOT_TOKEN=
SLACK_FORGE_SIGNING_SECRET=
SLACK_FORGE_APP_ID=

# Pixel (Frontend)
SLACK_PIXEL_BOT_TOKEN=
SLACK_PIXEL_SIGNING_SECRET=
SLACK_PIXEL_APP_ID=

# Helm (DevOps)
SLACK_HELM_BOT_TOKEN=
SLACK_HELM_SIGNING_SECRET=
SLACK_HELM_APP_ID=

# Sentinel (SRE)
SLACK_SENTINEL_BOT_TOKEN=
SLACK_SENTINEL_SIGNING_SECRET=
SLACK_SENTINEL_APP_ID=

# Quill (Content)
SLACK_QUILL_BOT_TOKEN=
SLACK_QUILL_SIGNING_SECRET=
SLACK_QUILL_APP_ID=

# Optional: Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090
